    </tr>
    {{ for share in statement.corporationSharesBefore }}      
    <tr>   
      <td>{{share.name}}{{ if share.ICO }}, IČO 
        <a href="/Subjekt/{{share.ICO}}">{{share.ICO}}
        </a>
{{ end }}
      </td>
      <td>
        {{ if share.address }}
